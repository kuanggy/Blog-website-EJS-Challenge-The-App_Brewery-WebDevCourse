<%- include("header.ejs") %>
<h1>Home</h1>
<p><%= homeStartingContent %> </p>
<% for (var i = 0; i < posts.length; i++) { %>
    <div class="card">
        <div class="card-body">
            <h2 class="card-title"><%- JSON.parse(posts[i]).topic %></h2>
            <p class="card-text"><%- post_short[i] %></p>
            <a href="/post/<%- JSON.parse(posts[i]).id %>" class="btn btn-primary">Read more</a>
        </div>
    </div>
<% } %>

<%- include("footer.ejs") %>